@model CvProjekt.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<div class="container mb-3 p-5">
    <H3> Byt lösenord </H3>
    <br />
    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post" asp-Action="ChangePasswordNow" asp-controller="Profile">

        <div class="card mb-4 shadow-sm border-0 bg-light" style="width: 50%;">
            <div class="card-body p-4">
                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label> Nuvarande lösenord: </label>
                    </div>
                    <div class="col-8">
                        <input type="password" asp-for="OldPassword" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label>Lösenord: </label>
                    </div>
                    <div class="col-8">
                        <input type="password" asp-for="Password" class="form-control" />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label>Bekräfta lösenord: </label>
                    </div>
                    <div class="col-8">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Byt Lösenord</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>










