@model Models.Message

@{
    ViewData["Title"] = "Radera meddelande";
}

<div class="card-body">
            <p class="lead">Är du säker på att du vill radera detta meddelande? Det går inte att ångra.</p>
            
            <dl class="row">
                <dt class="col-sm-3">Från:</dt>
                <dd class="col-sm-9">
                    @if (Model.FromUser != null)
                    {
                        @Model.FromUser.FirstName @Model.FromUser.LastName
                    }
                    else
                    {
                        @Model.SenderName
                    }
                </dd>

                <dt class="col-sm-3">Mottaget:</dt>
                <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

                <dt class="col-sm-3">Meddelande:</dt>
                <dd class="col-sm-9 p-3 bg-light border rounded">
                    @Model.Text
                </dd>
            </dl>

            <div class="mt-4">
                <form asp-action="DeleteMessage" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <button type="submit" class="btn btn-danger">Ja, radera meddelandet</button>
                    <a asp-action="SeeMessages" class="btn btn-secondary">Avbryt</a>
                </form>
            </div>
        </div>










