@model CvProjekt.Models.User

@{
    ViewData["Title"] = "Min Profil";

    // Hjälpmetod för att lösa bild-URL: använder Url.Content för lokala sökvägar,
    // lämnar externa länkar (http/https) orörda och ger default-avatar om tom.
    string ResolveImg(string? url)
    {
        if (string.IsNullOrWhiteSpace(url))
        {
            return Url.Content("~/images/default-avatar.png");
        }

        return url.StartsWith("http", System.StringComparison.OrdinalIgnoreCase)
            ? url
            : Url.Content(url);
    }
}

<style>
    .profile-wrap {
        max-width: 1100px;
        margin: 1.5rem auto;
    }

    .stat-card {
        max-width: 250px;
        margin: 0 auto 1rem;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 8px;
        border: 1px solid #e9eef8;
    }

    .profile-card {
        background: #fff;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(2,6,23,0.05);
    }

    .hero {
        display: flex;
        gap: 1rem;
        align-items: center;
        flex-wrap: wrap;
        border-bottom: 1px solid #eef6ff;
        padding-bottom: 1rem;
        margin-bottom: 1rem;
    }

    .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(180deg,#e9f2ff,#dbeeff);
        color: #08306b;
        font-weight: 700;
        font-size: 2rem;
        flex-shrink: 0;
    }

    .hero-info h1, .hero-info h3 {
        margin: 0;
        color: #062a4e;
        font-weight: 700;
    }

    .hero-info p {
        margin: 0.25rem 0;
        color: #556779;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 340px;
        gap: 1rem;
    }

    .section {
        margin-top: 1rem;
    }

    .competence-badge {
        display: inline-block;
        background: rgba(13,110,253,0.08);
        color: #0b5ed7;
        padding: 0.3rem 0.55rem;
        margin: 0.25rem 0.25rem 0 0;
        border-radius: 999px;
        font-size: 0.85rem;
        border: 1px solid rgba(13,110,253,0.12);
    }

    .btn-brand {
        background: linear-gradient(180deg,#0d6efd,#0b5ed7);
        color: #fff;
        border: none;
        padding: 0.45rem 0.75rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
    }

    .btn-outline-danger {
        border-radius: 8px;
    }

    .projects .card {
        border: 1px solid #eef6ff;
        border-radius: 10px;
    }
</style>

<div class="profile-wrap">
    <div class="stat-card text-center">
        <h5 class="mb-2">Statistik</h5>
        <p class="mb-0">Profilbesök: <strong>@Model?.ProfileVisits</strong></p>
    </div>

    <div class="profile-card">
        <div class="position-relative d-flex justify-content-center align-items-center mb-4">
            <h1 class="m-0">Min Profil</h1>
            <div class="position-absolute end-0">
                <a asp-controller="Profile" asp-action="Settings" class="btn-brand">Inställningar</a>
            </div>
        </div>

        @if (Model != null)
        {
            <div class="hero">
                <div class="avatar" aria-hidden="true">
                    @if (!string.IsNullOrWhiteSpace(Model.ImgUrl))
                    {
                        <img src="@ResolveImg(Model.ImgUrl)" alt="Profilbild" style="width:100%;height:100%;object-fit:cover;" />
                    }
                    else
                    {
                        @((Model.FirstName ?? "?").Substring(0, 1).ToUpper() + (Model.LastName ?? "?").Substring(0, 1).ToUpper())
                    }
                </div>

                <div class="hero-info">
                    <h3> @Model.FirstName @Model.LastName</h3>
                    <p class="small text-muted">@Model.Email</p>
                    <p class="small text-muted">@Model.Adress</p>
                </div>
            </div>

            <div class="info-grid">
                <div>
                    <div class="section">
                        <h4>Mina kompetenser</h4>
                        @if (Model.Resume != null && Model.Resume.Qualifications != null && Model.Resume.Qualifications.Any())
                        {
                            <div>
                                @foreach (var q in Model.Resume.Qualifications)
                                {
                                    <span class="competence-badge">@q.Name</span>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted"><em>Inga kompetenser angivna.</em></p>
                        }
                    </div>

                    <div class="section">
                        <h4>Utbildning</h4>
                        @if (Model.Resume != null && Model.Resume.EducationList != null && Model.Resume.EducationList.Any())
                        {
                            <ul class="list-unstyled">
                                @foreach (var e in Model.Resume.EducationList)
                                {
                                    <li class="mb-2">
                                        <strong>@e.SchoolName</strong> — @e.DegreeName
                                        <div class="text-muted">(@e.StartYear - @(e.EndYear != null ? e.EndYear.ToString() : "Nu"))</div>
                                        @if (!string.IsNullOrWhiteSpace(e.Description))
                                        {
                                            <div>@e.Description</div>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted"><em>Ingen utbildning angiven.</em></p>
                        }
                    </div>

                    <div class="section">
                        <h4>Arbetslivserfarenhet</h4>
                        @if (Model.Resume != null && Model.Resume.WorkList != null && Model.Resume.WorkList.Any())
                        {
                            <ul class="list-unstyled">
                                @foreach (var w in Model.Resume.WorkList)
                                {
                                    <li class="mb-3">
                                        <strong>@w.CompanyName</strong> — @w.Position
                                        <div class="text-muted">(@w.StartDate.ToString("yyyy/MM/dd") - @(w.EndDate != null ? w.EndDate?.ToString("yyyy/MM/dd") : "Nu"))</div>
                                        @if (!string.IsNullOrWhiteSpace(w.Description))
                                        {
                                            <div>@w.Description</div>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted"><em>Ingen arbetslivserfarenhet angiven.</em></p>
                        }
                    </div>

                    <div class="section mt-3 text-center">
                        <a asp-controller="Profile" asp-action="EditResume" class="btn-brand">Redigera CV</a>
                    </div>
                </div>

                <aside>
                    <div class="section">
                        <h4 class="mb-3">Dina skapade projekt</h4>
                        @if (Model.Projects != null && Model.Projects.Count > 0)
                        {
                            <div class="projects">
                                @foreach (var p in Model.Projects)
                                {
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h5 class="card-title fw-bold text-info">@p.Title</h5>
                                                <small class="text-muted">(@p.Year)</small>
                                            </div>
                                            <p class="small text-muted">Språk: @p.Language</p>
                                            @if (!string.IsNullOrWhiteSpace(p.Description))
                                            {
                                                <p>@p.Description</p>
                                            }

                                            @if (p.ProjectMembers != null)
                                            {

                                                var members = p.ProjectMembers
                                                .Where(pm => pm.MProjectId == p.Id)
                                                .Select(pm => pm.user)
                                                .Where(u => u != null && u.Id != p.CreatorId && u.IsActive == true)
                                                .Distinct()
                                                .ToList();

                                                @if (members.Any())
                                                {
                                                    <h6 class="mt-2 small text-muted">Deltagare</h6>
                                                    <ul class="list-unstyled">
                                                        @foreach (var mem in members)
                                                        {
                                                            <li class="small text-dark">@mem.FirstName @mem.LastName</li>
                                                        }
                                                    </ul>
                                                }
                                            }

                                            @if (!string.IsNullOrWhiteSpace(p.GithubLink))
                                            {
                                                var link = p.GithubLink.StartsWith("http", System.StringComparison.OrdinalIgnoreCase) ? p.GithubLink : "https://" + p.GithubLink;
                                                <a href="@link" target="_blank" class="btn-brand">Visa på GitHub</a>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted"><em>Inga projekt tillagda</em></p>
                        }

                        <div class="mt-3 text-center">
                            <a asp-controller="Profile" asp-action="EditProjects" class="btn-brand">Redigera Projekt</a>
                        </div>
                    </div>
                </aside>
            </div>
        }
        else
        {
            <h4>Ingen information hittad</h4>
        }
    </div>

    <div class="container mt-5">
        <h2 class="text-center">Projekt du deltar i</h2>

        @{
            var memberProjects = (List<CvProjekt.Models.Project>?)ViewBag.MemberProjects ?? new List<CvProjekt.Models.Project>();
        }

        @if (memberProjects.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 g-4">
                @foreach (var project in memberProjects)
                {
                    <div class="col">
                        <div class="card h-100 border-success p-2 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title fw-bold text-success">@project.Title (@project.Year)</h5>
                                <p class="small text-muted">Av: @project.Creator.FirstName @project.Creator.LastName</p>
                                <p>Språk: @project.Language</p>
                                @if (!string.IsNullOrWhiteSpace(project.Description))
                                {
                                    <p>Beskrivning: @project.Description</p>
                                }

                                @{
                                    var participants = project.ProjectMembers
                                    .Where(pm => pm.user != null && pm.MemberId != project.CreatorId)
                                    .Select(pm => pm.user)
                                    .Distinct()
                                    .ToList();
                                }
                                @if (participants.Any())
                                {
                                    <h6 class="mt-3 small text-muted">Deltagare</h6>
                                    <ul class="list-unstyled">
                                        @foreach (var mem in participants)
                                        {
                                            <li class="small text-dark">@mem.FirstName @mem.LastName</li>
                                        }
                                    </ul>
                                }

                                @if (!string.IsNullOrWhiteSpace(project.GithubLink))
                                {
                                    <div style="margin-bottom:1rem;">
                                        <a href="@project.GithubLink" target="_blank">Visa på Github</a>
                                    </div>
                                }

                                <form asp-controller="Project" asp-action="LeaveProject" method="post" asp-route-source="Profile" class="d-inline">
                                    <input type="hidden" name="projectId" value="@project.Id" />
                                    <button type="submit" class="btn btn-outline-danger">Lämna projekt</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted text-center">Du deltar inte i några projekt ännu.</p>
        }
    </div>
</div>